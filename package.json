{
  "name": "ganhammar",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && vite build && npm run build:lambda && npm run build:package",
    "build:lambda": "esbuild lambda/handler.ts --bundle --platform=node --target=node20 --format=esm --outfile=build/handler.js --external:./server/* --external:./client/*",
    "build:package": "echo '{\"type\":\"module\"}' > build/package.json",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "cdk": "cdk",
    "deploy": "cdk deploy --require-approval never --app 'npx tsx infra/bin/app.ts'"
  },
  "dependencies": {
    "hast-util-to-html": "^9.0.5",
    "lowlight": "^3.3.0",
    "marked": "^17.0.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.5.3",
    "@sveltejs/kit": "^2.52.0",
    "@sveltejs/vite-plugin-svelte": "^6.2.4",
    "@types/aws-lambda": "^8.10.160",
    "@types/node": "^25.2.3",
    "aws-cdk": "^2.1106.0",
    "aws-cdk-lib": "^2.238.0",
    "constructs": "^10.4.5",
    "esbuild": "^0.27.3",
    "svelte": "^5.53.0",
    "svelte-check": "^4.4.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
